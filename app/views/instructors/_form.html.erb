<h1> Add Instructor <h1>

<%= form_with model: @instructor do |f| %>
  <div class="row mb-3">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"><%= f.label :name %></label>
    <div class="col-sm-3">
      <%= f.text_field :name, class: "form-control form-control-sm" %>
    </div>
  </div>

  <div class="row mb-3">
    <label for="colFormLabel" class="col-sm-2 col-form-label"><%= f.label :email %></label>
    <div class="col-sm-3">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  </div>

  <div class="col-5">
    <button type="submit" class="btn btn-primary">Add Instructor</button>
  </div>
<% end %>
