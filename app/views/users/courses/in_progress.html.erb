<div class="container">
<table class="table">
 <thead>
  <tr>
  <th scope="col">Name</th>
  <th scope="col">Description</th>
  <th scope="col">Price</th>
  <th scope="col">Action</th>
  </tr>
  </thead>
  <tbody>
  <% @courses.each do |course|%>
  <tr>
   <td><%= course.name %></td>
   <td><%= course.description %></td>
   <td><%= course.price %></td>
   <td><%= link_to "Reviews", users_course_reviews_path(course) %></td>
   <td><%= link_to "Show", users_course_path(course) %></td>
  </tr>
 <% end %>
 </tbody>
 </table>
</div>
